<div class="row d-flex justify-content-center">
  <div
    id="avatar-picker-container"
    class="col-10 card p-2 justify-content-sm-center"
  >
    <form class="start-game-form justify-content-center">
      <h2 class="mb-5 text-center">Create Your Character</h2>
      <div
        class="row d-flex flex-xs-column flex-sm-column align-items-sm-center flex-md-row justify-content-md-evenly"
      >
        <label class="col-1">
          <input type="radio" class="avatar mb-3" value="1" name="avatar" />
          <img
            src="/images/avatars/avatar-1.png"
            alt="avatar-portrait"
            height="150"
            width="150"
          />
        </label>
        <label class="col-1">
          <input type="radio" class="avatar mb-3" value="2" name="avatar" />
          <img
            src="/images/avatars/avatar-2.png"
            alt="avatar-portrait"
            height="150"
            width="150"
          />
        </label>
        <label class="col-1">
          <input type="radio" class="avatar mb-3" value="3" name="avatar" />
          <img
            src="/images/avatars/avatar-3.png"
            alt="avatar-portrait"
            height="150"
            width="150"
          />
        </label>
      </div>
      <div
        class="row d-flex flex-sm-column align-items-sm-center flex-md-row justify-content-md-evenly mb-5"
      >
        <label class="col-1">
          <input type="radio" class="avatar mb-3" value="4" name="avatar" />
          <img
            src="/images/avatars/avatar-4.png"
            alt="avatar-portrait"
            height="150"
            width="150"
          />
        </label>
        <label class="col-1">
          <input type="radio" class="avatar mb-3" value="5" name="avatar" />
          <img
            src="/images/avatars/avatar-5.png"
            alt="avatar-portrait"
            height="150"
            width="150"
          />
        </label>
      </div>
      <div class="row d-flex justify-content-center mb-5">
        <label class="col-3">
          <label class="form-label">
            Name:
          </label>
          <input
            class="form-control w-75"
            id="character-name-field"
            type="text"
            value="The Stranger"
          />
        </label>
      </div>
      <div class="row d-flex justify-content-center">
        <div class="col-1">
          <button class="btn btn-danger" id="start-game-btn">START</button>
        </div>
      </div>
    </form>
  </div>
</div>

<script src="/js/create-character.js"></script>