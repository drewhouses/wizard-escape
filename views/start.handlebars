<div class="row d-flex justify-content-center">
  <div id="avatar-picker-container" class="col-10 card p-3">
    <form class="start-game-form">
      <h2 class="mb-5">Create Your Character</h2>
      <div class="row d-flex justify-content-evenly mb-5">
        <label class="col-1">
          <input type="radio" class="avatar" value="1" name="avatar" />
          <img
            src="/images/avatars/avatar-1.png"
            alt="avatar-portrait"
            height="150"
            width="150"
          />
        </label>
        <label class="col-1">
          <input type="radio" class="avatar" value="2" name="avatar" />
          <img
            src="/images/avatars/avatar-2.png"
            alt="avatar-portrait"
            height="150"
            width="150"
          />
        </label>
        <label class="col-1">
          <input type="radio" class="avatar" value="3" name="avatar" />
          <img
            src="/images/avatars/avatar-3.png"
            alt="avatar-portrait"
            height="150"
            width="150"
          />
        </label>
      </div>
      <div class="row d-flex justify-content-evenly mb-5">
        <label class="col-1">
          <input type="radio" class="avatar" value="4" name="avatar" />
          <img
            src="/images/avatars/avatar-4.png"
            alt="avatar-portrait"
            height="150"
            width="150"
          />
        </label>
        <label class="col-1">
          <input type="radio" class="avatar" value="5" name="avatar" />
          <img
            src="/images/avatars/avatar-5.png"
            alt="avatar-portrait"
            height="150"
            width="150"
          />
        </label>
      </div>
      <div class="row d-flex justify-content-center mb-5">
        <label class="col-3">
          <label class="form-label">
            Name:
          </label>
          <input
            class="form-control"
            id="character-name-field"
            type="text"
            value="The Stranger"
          />
        </label>
      </div>
      <div class="row d-flex justify-content-center">
        <div class="col-1">
          <button class="btn btn-success" id="start-game-btn">START</button>
        </div>
      </div>
    </form>
  </div>
</div>

<script src="/js/create-character.js"></script>